{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="form-div edit">
        <h1>Créer un compte</h1>

        {{ form_start(registrationForm, {'attr': {
            'class': 'form-div'
        }}) }}
        <div class="form-inside-div">
            {{ form_errors(registrationForm.email) }}
            {{ form_widget(registrationForm.email, {'attr': {
                'class': 'form-div',
                'placeholder': 'Email'
            }}) }}
        </div>
        <div class="form-inside-div">
            {{ form_errors(registrationForm.plainPassword) }}
            {{ form_widget(registrationForm.plainPassword, {'attr': {
                'class': 'form-div',
                'placeholder': 'Mot de passe'
            }}) }}
        </div>
        <div class="form-inside-div checkbox-group">
            {{ form_errors(registrationForm.agreeTerms) }}
            {{ form_widget(registrationForm.agreeTerms, {'attr': {
                'class': 'form-check-input'
            }}) }}
            {{ form_label(registrationForm.agreeTerms, 'J\'accepte les conditions d\'utilisation du site',{'label_attr': {
                'class': 'form-check-label'
            }}) }}
        </div>

        <div class="form-inside-div flex">
            <button class="btn show">Créer un compte</button>
        </div>
        {{ form_end(registrationForm) }}
    </div>

{% endblock %}
