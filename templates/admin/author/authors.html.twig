{% extends 'base.html.twig' %}

{% block title %}
    Tous les auteurs
{% endblock %}

{% block body %}
    {% include 'admin/author/_commons/_author_search.html.twig' %}

    {% if authors %}
        <div class="authors">
            <table>
                <thead>
                <th class="text-center">
                    ID
                </th>
                <th class="text-center">
                    Nom
                </th>
                <th class="text-center">
                    Prénom
                </th>
                <th class="text-center">
                    Date de naissance
                </th>
                <th class="text-center">
                    Date de décès
                </th>
                <th></th>
                <th></th>
                <th></th>
                </thead>
                <tbody>
                {% for author in authors %}
                    <tr>
                        <td>
                            {{ author.id }}
                        </td>
                        <td>
                            {{ author.name }}
                        </td>
                        <td>
                            {{ author.firstName }}
                        </td>
                        <td>
                            {{ author.birthDate | date('d F Y') }}
                        </td>
                        <td>
                            {% if author.deathDate %}
                                {{ author.deathDate | date('d F Y') }}
                            {% else %}
                                Vivant
                            {% endif %}
                        </td>
                        <td>
                            <a class="btn btn-info rounded-pill"
                               href="{{ path('admin_author', {'id':author.id}) }}">Détails</a>
                        </td>
                        <td>
                            <a class="btn btn-warning rounded-pill" href="{{ path('admin_author_edit', {'id':author.id}) }}">Modifier</a>
                        </td>
                        <td>
                            <a class="btn btn-danger rounded-pill" href="{{ path('admin_author_delete', {'id':author.id}) }}">Supprimer</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <a href="{{ path('admin_author_new') }}" class="btn btn-dark text-light ml-5 rounded-pill">Créer un nouvel
                auteur</a>
        </div>
    {% else %}
        <div class="error">
            <p>Aucun auteur trouvé</p>
            <a href="{{ path('admin_authors') }}" class="goBack"><< Retour à la liste des auteurs</a>
            <a href="{{ path('admin_author_new') }}" class="btn btn-dark text-light ml-5 rounded-pill">Créer un nouvel
                auteur</a>
        </div>
    {% endif %}
{% endblock %}



