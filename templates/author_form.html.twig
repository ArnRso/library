{% extends "base.html.twig" %}

{% block body %}
    <form action="{{ path('author_insert') }}" method="post" class="book-form">
        <div class="form-group">
            <label for="name" class="h4">Nom</label>
            <input type="text" name="name" id="name" class="form-control">
        </div>
        <div class="form-group">
            <label for="firstName" class="h4">Prénom</label>
            <input type="text" name="firstName" id="firstName" class="form-control">
        </div>
        <div class="form-group">
            <label for="birthDate" class="h4">Date de naissance</label>
            <input type="date" name="birthDate" id="birthDate" class="form-control">
        </div>
        <div class="form-group">
            <label for="deathDate" class="h4">Date de décès</label>
            <input type="date" name="deathDate" id="deathDate" class="form-control">
        </div>


        <input type="submit" value="créer" class="btn btn-primary rounded-pill px-5 py-2">
    </form>
{% endblock %}

