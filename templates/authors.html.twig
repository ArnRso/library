{% extends 'base.html.twig' %}

{% block title %}
    Tous les auteurs
{% endblock %}

{% block body %}
    <div class="authors">
        <table>
            <thead>
            <th>
                Nom
            </th>
            <th>
                Prénom
            </th>
            <th>
                Date de naissance
            </th>
            <th>
                Date de décès
            </th>
            </thead>
            <tbody>
            {% for author in authors %}
                <tr>
                    <td>
                        {{ author.name }}
                    </td>
                    <td>
                        {{ author.firstName }}
                    </td>
                    <td>
                        {{ author.birthDate | date('d F Y') }}
                    </td>
                    <td>
                        {% if author.deathDate %}
                            {{ author.deathDate| format_date(locale=fr_FR) | date('d F Y') }}
                        {% else %}
                            Vivant
                        {% endif %}
                    </td>
                    <td>
                        <a class="details" href="{{ path('author', {'id':author.id}) }}">Détails</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}



