{% extends 'base.html.twig' %}

{% block title %}
    Tous les livres
{% endblock %}

{% block body %}

    {% include 'commons/_book_search.html.twig' %}


    {% if books %}
        <div class="books">
            <table>
                <thead>
                <th class="text-center">
                    ID
                </th>
                <th class="text-center">
                    Titre
                </th>
                <th class="text-center">
                    Nombre de pages
                </th>
                <th class="text-center">
                    Style
                </th>
                <th class="text-center">
                    En stock ?
                </th>
                <th></th>
                <th></th>
                </thead>
                <tbody>
                {% for book in books %}
                    <tr>
                        <td>
                            {{ book.id }}
                        </td>
                        <td>
                            {{ book.title }}
                        </td>
                        <td>
                            {{ book.nbPages }}
                        </td>
                        <td>
                            {{ book.style }}
                        </td>
                        <td>
                            {% if book.inStock %}
                                <span class="text-success">En stock</span>
                            {% else %}
                                <span class="text-danger">Non disponible</span>
                            {% endif %}
                        </td>

                        <td>
                            <a class="btn btn-info rounded-pill" href="{{ path('book', {'id':book.id}) }}">Détails</a>
                        </td>
                        <td>
                            <a class="btn btn-danger rounded-pill" href="{{ path('book_delete', {'id':book.id}) }}">Supprimer</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <a href="{{ path('book_new') }}" class="btn btn-dark text-light ml-5 rounded-pill">Créer un nouveau livre</a>

        </div>
    {% else %}
        <div class="error">
            <p>Aucun livre trouvé</p>
            <a href="{{ path('books') }}" class="goBack"><< Retour à la liste des livres</a>
            <a href="{{ path('book_new') }}" class="new-book">Créer un nouveau livre</a>
        </div>
    {% endif %}
{% endblock %}


